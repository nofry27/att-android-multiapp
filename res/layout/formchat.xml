<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/setting_form_bg"
    android:orientation="vertical" >

    <View
        android:id="@+id/View02"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#3b4755" >
    </View>

    <RelativeLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/changestatus_buttonbar_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/formchat_icon_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/ic_yahoo_online"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:shadowColor="#000000"
            android:shadowDx="0.0"
            android:shadowDy="1.0"
            android:shadowRadius="2.0"
            android:text="Update"
            android:textColor="#FFFFFF"
            android:textStyle="bold" >
        </ImageView>

        <TextView
            android:id="@+id/formchat_friends_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/formchat_icon_status"
            android:layout_toRightOf="@+id/formchat_btn_back"
            android:lines="1"
            android:shadowColor="#FFFFFF"
            android:shadowDx="0.0"
            android:shadowDy="2.0"
            android:shadowRadius="1.5"
            android:textColor="#3b4755"
            android:textSize="20dip"
            android:textStyle="bold" >
        </TextView>

        <Button
            android:id="@+id/formchat_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/btn_back"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:shadowColor="#000000"
            android:shadowDx="0.0"
            android:shadowDy="1.0"
            android:shadowRadius="2.0"
            android:textColor="#FFFFFF"
            android:textStyle="bold" >
        </Button>
    </RelativeLayout>

    <View
        android:id="@+id/View01"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#3b4755" >
    </View>

    <ScrollView
        android:id="@+id/formchat_scrollbar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/formchat_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="60dip" >
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/View03"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#3b4755" >
    </View>

    <RelativeLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/formchat_icon_emo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/cmd_choice_emo"
            android:shadowColor="#000000"
            android:shadowDx="0.0"
            android:shadowDy="1.0"
            android:shadowRadius="2.0"
            android:textColor="#FFFFFF"
            android:textStyle="bold" >
        </Button>

        <EditText
            android:id="@+id/txt_formchat_message"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/formchat_btt_send"
            android:layout_toRightOf="@+id/formchat_icon_emo"
            android:background="#FFFFFF"
            android:hint="Write message"
            android:paddingLeft="10dip"
            android:textSize="16dip" >
        </EditText>

        <Button
            android:id="@+id/formchat_btn_send"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/btn_send"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:shadowColor="#000000"
            android:shadowDx="0.0"
            android:shadowDy="1.0"
            android:shadowRadius="2.0"
            android:textColor="#FFFFFF"
            android:textStyle="bold" >
        </Button>
    </RelativeLayout>

</LinearLayout>